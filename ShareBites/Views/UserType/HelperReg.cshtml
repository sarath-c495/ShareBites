@model ShareBites.Models.Helper

@{
    ViewData["Title"] = "HelperReg";
}

<h4>Helper-Register</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddHelper">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-group-sm">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group form-group-sm">
                <label asp-for="RegionId" class="control-label"></label>
                <select asp-for="RegionId" class ="form-control" asp-items="ViewBag.RegionId"></select>
            </div>
            <div class="form-group form-group-sm">
                <label asp-for="Address1" class="control-label"></label>
                <input asp-for="Address1" class="form-control" />
                <span asp-validation-for="Address1" class="text-danger"></span>
            </div>
            <div class="form-group form-group-sm">
                <label asp-for="Address2" class="control-label"></label>
                <input asp-for="Address2" class="form-control" />
                <span asp-validation-for="Address2" class="text-danger"></span>
            </div>
            <div class="form-group form-group-sm">
                <label asp-for="ZipCode" class="control-label"></label>
                <input asp-for="ZipCode" class="form-control" />
                <span asp-validation-for="ZipCode" class="text-danger"></span>
            </div>
            <div class="form-group form-group-sm">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            
                <div class="form-group form-group-sm ">
                <label asp-for="EmailId" class="control-label"></label>
                <input asp-for="EmailId" class="form-control" />
                <span asp-validation-for="EmailId" class="text-danger"></span>
            </div>
            <div class="form-group form-group-sm ">                
                <input asp-for="Notifications" class="form-check-input" />
                <label class="form-check-label" asp-for="Notifications">Receive notifications</label>
                <span asp-validation-for="Notifications" class="text-danger"></span>
            </div>
            
            @*<div class="form-group form-group-sm" >
                <label asp-for="ModeOfHelp" class="control-label"></label>*@
            <input asp-for="ModeOfHelp" class="form-control" type="hidden" value="@ViewBag.ModeOfHelp"/>
            @*</div>*@
            @*
            <div class="form-group form-group-sm">
                <label asp-for="LoginId" class="control-label"></label>
                <select asp-for="LoginId" class ="form-control" asp-items="ViewBag.LoginId"></select>
            </div>*@
            <div class="form-group form-group-sm">
                <input type="submit" value="Register" class="btn btn-primary" />  |   <a href="@Url.Action("Index", "Home")">Back to Home</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

