@model ShareBites.Models.ExcessFoodOrder

@{
    ViewData["Title"] = "DeleteOrder";
}

<br>
<br />

<h4 class="display-6">Are you sure you want to delete this?</h4>
<hr/>
<br/>
<div class="display-10">
        
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrderPickUp)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderPickUp)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ModeOfdelivery)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ModeOfdelivery)
        </dd>    
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Food.FoodDesc)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Food.FoodDesc)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Food.Res.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Food.Res.Name)
        </dd>
    </dl>
    <hr />
    <br />
    <form asp-action="DeleteOrderConfirm">
        <input type="hidden" asp-for="OrderId" value="@Model.OrderId" />
        <input type="submit" value="Delete" class="btn btn-outline-success" /> 
        
        <a class="btn btn-outline-success" asp-area="" asp-controller="Food" asp-action="ViewOrders">Back to Orders</a>
    </form>
</div>
