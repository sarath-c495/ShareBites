            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Food.FoodStatus)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Food.FoodStatus)
            </dd>
